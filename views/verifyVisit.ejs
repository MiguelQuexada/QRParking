<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Vigilantes</title>
    <link rel="icon" href="resources/images/logo.png">
    <link rel="stylesheet" href="resources/styles/home.css">    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" >   
</head>
    <body>
        <div class="centro">
            <% if(login){ %>
                <h1>GESTIÓN DE VISITANTES</h1>
                <form action="/visitors" method="post" id="form">
                    <div class="form">            
                        <div class="grupo">
                            <p>Acción</p>     
                            <select class="selector" id="accion" name="accion">
                              <option value="ingresar">Ingresar</option>
                              <option value="salir">Salir</option>
                            </select>
                        </div>
                        <div class="grupo">
                            <input type="text" name="idVisit" id="idVisit" required><span class="barra"></span>
                            <label for="">Identificación del Visitante:</label>
                        </div>   
                        <div class="grupo">
                            <input type="text" name="nombre" id="nombre" required><span class="barra"></span>
                            <label for="">Nombre del Visitante</label>
                        </div>
                        <div class="grupo">
                            <input type="text" name="idResidente" id="idResidente" required><span class="barra"></span>
                            <label for="">Identificación del Residente a Visitar</label>
                        </div>                                                         
                        <button type="submit">Verificar</button>                                                         
                    </div>                   
                </form>       
                <a href="homeVig"><button type="button">Volver</button></a>                           

                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                <% if (typeof alert != "undefined"){%>
                   <script>
                       Swal.fire({
                           title:'<%= alertTitle %>',
                           text: '<%=alertMessage %>',
                           icon: '<%=alertIcon %>',
                           showConfirmButton: <%= showConfirmButton %>,
                           timer: <%= timer %>
                       }).then(()=>{
                           window.location='/<%=ruta%>'
                       })
                   </script>
                   <% } %>            
                         
            <%} else { %>
                <div class="grupo">
                    <h1><strong><%=nombre%></strong></h1>
                </div>

         
                <a href="/"><button type="logout">Ingresar</button></a>                               
            <% } %>           
        </div>

    </body>
</html>